heorems have been mechanically verified in Isabelle/HOL.</api:text></api:field><api:field name="authors" type="person-list" display-name="Authors"><api:people><api:person><api:links><api:link type="elements/user" id="30460" href="https://mypublications.shef.ac.uk:8091/secure-api/v6.13/users/30460"/></api:links><api:last-name>Popescu</api:last-name><api:initials>A</api:initials><api:first-names>A</api:first-names><api:separate-first-names><api:first-name>A</api:first-name></api:separate-first-names><api:addresses><api:address iso-country-code="DE"><api:line type="organisation">Technische Universität München</api:line><api:line type="city">Munich</api:line><api:line type="country">Germany</api:line></api:address></api:addresses><api:identifiers><api:identifier scheme="scopus-author-id">8055779400</api:identifier></api:identifiers></api:person><api:person><api:last-name>Hölzl</api:last-name><api:initials>J</api:initials><api:first-names>J</api:first-names><api:separate-first-names><api:first-name>J</api:first-name></api:separate-first-names><api:addresses><api:address iso-country-code="DE"><api:line type="organisation">Technische Universität München</api:line><api:line type="city">Munich</api:line><api:line type="country">Germany</api:line></api:address></api:addresses><api:identifiers><api:identifier scheme="scopus-author-id">7005062988</api:identifier></api:identifiers></api:person><api:person><api:last-name>Nipkow</api:last-name><api:initials>T</api:initials><api:first-names>T</api:first-names><api:separate-first-names><api:first-name>T</api:first-name></api:separate-first-names><api:addresses><api:address iso-country-code="DE"><api:line type="organisation">Technische Universität München</api:line><api:line type="city">Munich</api:line><api:line type="country">Germany</api:line></api:address></api:addresses><api:identifiers><api:identifier scheme="scopus-author-id">7003512544</api:identifier></api:identifiers></api:person></api:people></api:field><api:field name="ei